[Assembly]
Multithreading = false

[TimeLoop]
TEnd = 1                # end time of the simulation
DtInitial = 5e-3        # initial time step size
MaxTimeStepSize = 5e-2  # maximal time step size

[Grid]
LowerLeft = 0 0         # lower left (front) corner of the domain
UpperRight = 1 1        # upper right (back) corner of the domain
Cells = 200 200         # grid resolution in each coordinate direction
Periodic = 1 1

[Problem]
xi = 25e-3               # phasefield parameter
omega = 25e-4            # phasefield diffusivity/surface tension parameter
UseAlpha = 0            # switch from sigma to 'alpha' := 1/omega
delta = 1e-10           # regularization parameter

Name = cell_phase       # base name for VTK output files
OutputInterval = 0.1    # interval size for VTK output

CenterX = 0.5
CenterY = 0.5
Radius = 0.3
PhasefieldICScaling = 10.0